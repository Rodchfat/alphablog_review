<h1> create new article page</h1>

<% if @article.errors.any? %>
<% @article.errors.full_messages.each do |msg| %>
<%= msg %>
<% end %>
<%end%>

<%= form_for @article do |f| %>

<p>
    <%= f.label :title %>
    <%= f.text_field :title %>
</p>
<p>
    <%= f.label :description %>
    <%= f.text_field :description %>
</p>
<%= f.submit :Submit %>
<% end %>
<%= link_to "back to articles list", articles_path %>